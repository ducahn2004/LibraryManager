<?xml version="1.0" encoding="UTF-8"?>

<!-- Import necessary libraries -->
<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- Main BorderPane layout -->
<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1"
  xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="org.group4.librarymanagercode.BookViewController">
  <!-- Left navigation bar -->
  <left>
    <VBox prefHeight="582.0" prefWidth="130.0" style="-fx-background-color: #2B579A;"
      BorderPane.alignment="CENTER">
      <!-- Navigation buttons -->
      <JFXButton fx:id="homeButton" text="Home" textFill="WHITE" prefHeight="46.0"
        prefWidth="135.0" onAction="#HomeAction" textOverrun="CLIP">
        <font>
          <Font size="16.0"/>
        </font>
      </JFXButton>
      <JFXButton fx:id="MemberButton" text="Member" textFill="#fff8f8" prefHeight="46.0"
        prefWidth="133.0" onAction="#MemberAction" textOverrun="CLIP">
        <font>
          <Font size="16.0"/>
        </font>
      </JFXButton>
      <JFXButton fx:id="bookButton" text="Book" textFill="#fff8f8" prefHeight="46.0"
        prefWidth="136.0" onAction="#BookAction" textOverrun="CLIP">
        <font>
          <Font size="16.0"/>
        </font>
      </JFXButton>
      <JFXButton fx:id="bookLendingButton" text="Book Lending" textFill="#fff8f8" prefHeight="46.0"
        prefWidth="136.0" onAction="#BookLendingAction" textOverrun="CLIP">
        <font>
          <Font size="16.0"/>
        </font>
      </JFXButton>
      <JFXButton fx:id="notificationButton" text="Notification" textFill="#fff8f8" prefHeight="46.0"
        prefWidth="137.0" onAction="#notificationAction" textOverrun="CLIP">
        <font>
          <Font size="16.0"/>
        </font>
      </JFXButton>
      <JFXButton fx:id="settingButton" text="Setting" textFill="#fff8f8" prefHeight="46.0"
        prefWidth="137.0" onAction="#SettingAction" textOverrun="CLIP">
        <font>
          <Font size="16.0"/>
        </font>
      </JFXButton>
      <JFXButton fx:id="closeButton" text="Close" textFill="#fff8f8" prefHeight="46.0"
        prefWidth="137.0" onAction="#Close" textOverrun="CLIP">
        <font>
          <Font size="16.0"/>
        </font>
      </JFXButton>
    </VBox>
  </left>

  <!-- Top bar with search and title -->
  <top>
    <Pane prefHeight="130.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
      <!-- Search bar -->
      <AnchorPane layoutX="660.0" layoutY="90.0" prefHeight="28.0" prefWidth="330.0"
        style="-fx-border-color: BLACK; -fx-border-radius: 15;">
        <padding>
          <Insets top="25.0"/>
        </padding>
      </AnchorPane>
      <TextField fx:id="searchField" layoutX="695.0" layoutY="92.0" prefHeight="16.0"
        prefWidth="280.0" promptText="Search by Title or ISBN"
        style="-fx-background-color: transparent;"/>
      <FontAwesomeIconView glyphName="SEARCH" layoutX="674.0" layoutY="111.0" size="20" text="ï€‚"/>

      <!-- Page title -->
      <Label layoutX="379.0" layoutY="14.0" text="Library Management System" textFill="#2b579a">
        <font>
          <Font name="Segoe UI Semilight" size="23.0"/>
        </font>
      </Label>
      <Label layoutX="130.0" layoutY="31.0" text="Book" textFill="#2b579a">
        <font>
          <Font name=".VnArial Bold" size="30.0"/>
        </font>
      </Label>
    </Pane>
  </top>

  <!-- Main content area -->
  <center>
    <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
      <!-- Book table -->
      <TableView fx:id="tableView" prefHeight="523.0" prefWidth="990.0" onMouseClicked="#initialize">
        <columns>
          <TableColumn fx:id="ISBN" text="ISBN" prefWidth="114.0"/>
          <TableColumn fx:id="bookName" text="Title" prefWidth="184.0"/>
          <TableColumn fx:id="bookSubject" text="Subject" prefWidth="102.0"/>
          <TableColumn fx:id="bookPublisher" text="Publisher" prefWidth="119.2"/>
          <TableColumn fx:id="bookLanguage" text="Language" prefWidth="83.2"/>
          <TableColumn fx:id="numberOfPages" text="Pages" prefWidth="81.6"/>
          <TableColumn fx:id="bookAuthor" text="Author" prefWidth="173.6"/>
          <TableColumn fx:id="actionColumn" text="Actions" prefWidth="104.0"/>
        </columns>
        <columnResizePolicy>
          <TableView fx:constant="UNCONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
      </TableView>

      <!-- Add book button -->
      <Pane prefHeight="34.0" prefWidth="870.0">
        <Button fx:id="addBookButton" layoutX="778.0" layoutY="8.0" mnemonicParsing="false"
          text="Add Book" onAction="#addBookAction"/>
      </Pane>
    </VBox>
  </center>
</BorderPane>
