<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23"
  xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="org.group4.librarymanagercode.BookViewController">
  <left>
    <VBox prefHeight="582.0" prefWidth="130.0" style="-fx-background-color: #2e069c;"
      BorderPane.alignment="CENTER">
      <children>
        <JFXButton fx:id="homeButton" alignment="TOP_LEFT" contentDisplay="TOP" prefHeight="46.0"
          prefWidth="135.0" text="Home" textFill="WHITE" textOverrun="CLIP">
          <font>
            <Font size="16.0"/>
          </font>
        </JFXButton>
        <JFXButton fx:id="studentsButton" alignment="TOP_LEFT" centerShape="false" prefHeight="46.0"
          prefWidth="133.0" text="Member" textFill="#fff8f8" textOverrun="CLIP">
          <font>
            <Font size="16.0"/>
          </font>
        </JFXButton>
        <JFXButton fx:id="addStudent" alignment="TOP_LEFT" centerShape="false" prefHeight="46.0"
          prefWidth="133.0" text="Add Member" textFill="#fff8f8" textOverrun="CLIP">
          <font>
            <Font size="16.0"/>
          </font>
        </JFXButton>
        <JFXButton fx:id="bookButton" alignment="TOP_LEFT" prefHeight="46.0" prefWidth="136.0"
          text="Book" textFill="#fff8f8" textOverrun="CLIP">
          <font>
            <Font size="16.0"/>
          </font>
        </JFXButton>
        <JFXButton fx:id="addBookButton" alignment="TOP_LEFT" prefHeight="46.0" prefWidth="135.0"
          text="Add Book" textFill="#fff8f8" textOverrun="CLIP">
          <font>
            <Font size="16.0"/>
          </font>
        </JFXButton>
        <JFXButton fx:id="returnBookButton" alignment="TOP_LEFT" prefHeight="46.0" prefWidth="137.0"
          text="Return Book" textFill="#fff8f8" textOverrun="CLIP">
          <font>
            <Font size="16.0"/>
          </font>
        </JFXButton>
        <JFXButton fx:id="settingButton" alignment="TOP_LEFT" prefHeight="46.0" prefWidth="137.0"
          text="Setting" textFill="#fff8f8" textOverrun="CLIP">
          <font>
            <Font size="16.0"/>
          </font>
        </JFXButton>
        <JFXButton fx:id="closeButton" alignment="TOP_LEFT" prefHeight="46.0" prefWidth="137.0"
          text="Close" textFill="#fff8f8" textOverrun="CLIP">
          <font>
            <Font size="16.0"/>
          </font>
        </JFXButton>
      </children>
    </VBox>
  </left>
  <top>
    <Pane prefHeight="130.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
      <children>
        <!-- Thanh tìm kiếm -->
        <HBox alignment="CENTER" spacing="10"/>
        <Pane prefHeight="135.0" prefWidth="130.0" style="-fx-background-color: #2e069c;"/>
        <Label alignment="BOTTOM_CENTER" contentDisplay="RIGHT" layoutX="130.0" layoutY="31.0"
          prefHeight="96.0" prefWidth="104.0" text="Book" textFill="#2e069c">
          <font>
            <Font name=".VnArial Bold" size="30.0"/>
          </font>
        </Label>
        <Label layoutX="379.0" layoutY="14.0" text="Library Management System" textFill="#a1a1a1"
          BorderPane.alignment="CENTER">
          <font>
            <Font name="Segoe UI Semilight" size="23.0"/>
          </font>
          <BorderPane.margin>
            <Insets top="2.0"/>
          </BorderPane.margin>
        </Label>
        <Button layoutX="941.0" layoutY="92.0" onAction="#onSearchBook"
          onMouseClicked="#onSearchBook" text="Search"/>
        <TextField fx:id="searchField" layoutX="695.0" layoutY="92.0" prefHeight="25.0"
          prefWidth="238.0" promptText="Search by Title or ISBN"/>
      </children>
    </Pane>

  </top>
  <center>


    <TableView fx:id="tableView" onMouseClicked="#initialize" prefHeight="523.0" prefWidth="990.0"
      BorderPane.alignment="CENTER">
      <columns>
        <TableColumn fx:id="ISBN" prefWidth="113.95263671875" text="ISBN"/>
        <TableColumn fx:id="bookName" prefWidth="184.0000457763672" text="Title"/>
        <TableColumn fx:id="bookSubject" prefWidth="101.59994506835938" text="Subject"/>
        <TableColumn fx:id="bookPublisher" prefWidth="119.2000732421875" text="Publisher"/>
        <TableColumn fx:id="bookLanguage" prefWidth="83.199951171875" text="Language"/>
        <TableColumn fx:id="numberOfPages" prefWidth="81.5999755859375" text="Pages"/>
        <TableColumn fx:id="bookAuthor" prefWidth="173.60003662109375" text="Author"/>

      </columns>
      <BorderPane.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </BorderPane.margin>
      <columnResizePolicy>
        <TableView fx:constant="UNCONSTRAINED_RESIZE_POLICY"/>
      </columnResizePolicy>
    </TableView>

  </center>
</BorderPane>
