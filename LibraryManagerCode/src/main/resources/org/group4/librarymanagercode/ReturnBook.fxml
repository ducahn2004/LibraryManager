          <font>
            <Font size="16.0"/>
          </font>
        </JFXButton>
        <JFXButton fx:id="settingButton" alignment="TOP_LEFT" onAction="#SettingAction"
          prefHeight="46.0" prefWidth="137.0" text="Setting" textFill="#fff8f8" textOverrun="CLIP">
          <font>
            <Font size="16.0"/>
          </font>
        </JFXButton>
        <JFXButton fx:id="closeButton" alignment="TOP_LEFT" onAction="#Close" prefHeight="46.0"
          prefWidth="137.0" text="Close" textFill="#fff8f8" textOverrun="CLIP">
          <font>
            <Font size="16.0"/>
          </font>
        </JFXButton>
      </children>
    </VBox>
  </left>
  <top>
    <Pane prefHeight="130.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
      <children>

        <HBox alignment="CENTER" spacing="10"/>
        <Pane prefHeight="135.0" prefWidth="130.0" style="-fx-background-color: #2e069c;"/>
        <Label alignment="BOTTOM_CENTER" contentDisplay="RIGHT" layoutX="130.0" layoutY="31.0"
          prefHeight="96.0" prefWidth="104.0" text="Book" textFill="#2e069c">
          <font>
            <Font name=".VnArial Bold" size="30.0"/>
          </font>
        </Label>
        <Label layoutX="379.0" layoutY="14.0" text="Library Management System" textFill="#a1a1a1"
          BorderPane.alignment="CENTER">
          <font>
            <Font name="Segoe UI Semilight" size="23.0"/>
          </font>
          <BorderPane.margin>
            <Insets top="2.0"/>
          </BorderPane.margin>
        </Label>
        <TextField fx:id="searchField" layoutX="695.0" layoutY="92.0" prefHeight="25.0"
          prefWidth="299.0" promptText="Search by Title or ISBN"/>
      </children>
    </Pane>
  </top>
  <center>
    <TableView fx:id="bookLendingTable" layoutX="25.0" layoutY="140.0" prefHeight="200.0"
      BorderPane.alignment="CENTER">
      <columns>
        <TableColumn fx:id="bookItemID" prefWidth="179.19995880126953" text="Book Item ID"/>
        <TableColumn fx:id="bookName" prefWidth="225.60003662109375" text="Book Name"/>
        <TableColumn fx:id="memberID" prefWidth="189.60006713867188" text="Member ID"/>
        <TableColumn fx:id="memberName" prefWidth="221.599853515625" text="Member Name"/>
        <TableColumn fx:id="creationDate" prefWidth="221.599853515625" text="Creation Date"/>
        <TableColumn fx:id="dueDate" prefWidth="221.599853515625" text="Due Date "/>
        <TableColumn fx:id="returnDate" prefWidth="221.599853515625" text="Return Date"/>
      </columns>
      <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
      </columnResizePolicy>
    </TableView>
  </center>
</BorderPane>
