<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="org.group4.librarymanagercode.BorrowingBookController"
  prefHeight="500.0" prefWidth="700.0">

  <left>
    <VBox prefHeight="582.0" prefWidth="130.0" style="-fx-background-color: #2e069c;"
      BorderPane.alignment="CENTER">
      <children>
        <JFXButton fx:id="homeButton" alignment="TOP_LEFT" contentDisplay="TOP"
          onAction="#HomeAction" prefHeight="46.0" prefWidth="135.0" text="Home" textFill="WHITE"
          textOverrun="CLIP">
          <font>
            <Font size="16.0"/>
          </font>
        </JFXButton>
        <JFXButton fx:id="MemberButton" alignment="TOP_LEFT" centerShape="false"
          onAction="#MemberAction" prefHeight="46.0" prefWidth="133.0" text="Member"
          textFill="#fff8f8" textOverrun="CLIP">
          <font>
            <Font size="16.0"/>
          </font>
        </JFXButton>
        <JFXButton fx:id="bookButton" alignment="TOP_LEFT" onAction="#BookAction" prefHeight="46.0"
          prefWidth="136.0" text="Book" textFill="#fff8f8" textOverrun="CLIP">
          <font>
            <Font size="16.0"/>
          </font>
        </JFXButton>
        <JFXButton fx:id="returnBookButton" alignment="TOP_LEFT" onAction="#ReturnBookAction"
          prefHeight="46.0" prefWidth="137.0" text="Return Book" textFill="#fff8f8"
          textOverrun="CLIP">
          <font>
            <Font size="16.0"/>
          </font>
        </JFXButton>
        <JFXButton fx:id="notificationButton" alignment="TOP_LEFT" onAction="#notificationAction"
          prefHeight="46.0" prefWidth="137.0" text="Notification" textFill="#fff8f8"
          textOverrun="CLIP">
          <font>
            <Font size="16.0"/>
          </font>
        </JFXButton>
        <JFXButton fx:id="settingButton" alignment="TOP_LEFT" onAction="#SettingAction"
          prefHeight="46.0" prefWidth="137.0" text="Setting" textFill="#fff8f8" textOverrun="CLIP">
          <font>
            <Font size="16.0"/>
          </font>
        </JFXButton>
        <JFXButton fx:id="closeButton" alignment="TOP_LEFT" onAction="#Close" prefHeight="46.0"
          prefWidth="137.0" text="Close" textFill="#fff8f8" textOverrun="CLIP">
          <font>
            <Font size="16.0"/>
          </font>
        </JFXButton>
      </children>
    </VBox>
  </left>

  <top>
    <Pane prefHeight="130.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
      <children>
        <HBox alignment="CENTER" spacing="10"/>
        <Pane prefHeight="135.0" prefWidth="130.0" style="-fx-background-color: #2e069c;"/>
        <Label alignment="BOTTOM_CENTER" contentDisplay="RIGHT" layoutX="130.0" layoutY="31.0"
          prefHeight="96.0" prefWidth="104.0" text="Book" textFill="#2e069c">
          <font>
            <Font name=".VnArial Bold" size="30.0"/>
          </font>
        </Label>
        <Label layoutX="379.0" layoutY="14.0" text="Library Management System" textFill="#a1a1a1"
          BorderPane.alignment="CENTER">
          <font>
            <Font name="Segoe UI Semilight" size="23.0"/>
          </font>
          <BorderPane.margin>
            <Insets top="2.0"/>
          </BorderPane.margin>
        </Label>
      </children>
    </Pane>
  </top>

  <center>
    <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
      <center>
        <ListView fx:id="listView" prefHeight="200.0" prefWidth="200.0" style="-fx-font-size: 15;">
          <BorderPane.margin>
            <Insets left="10.0" right="10.0" top="5.0" />
          </BorderPane.margin>
        </ListView>
      </center>
      <bottom>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0"
          BorderPane.alignment="CENTER">
          <TextField fx:id="lateFee" editable="false" maxWidth="234.0"
            minWidth="225.0" prefHeight="31.0" prefWidth="225.0" promptText="Late Fee">
            <font>
              <Font size="13.0"/>
            </font>
          </TextField>
          <Button fx:id="submit" onAction="#submitBook" prefHeight="31.0" prefWidth="167.0"
            text="Submit">
            <font>
              <Font name="Segoe UI Semilight" size="15.0"/>
            </font>
          </Button>
          <Button fx:id="renew" disable="true" layoutX="544.0" layoutY="45.0"
            onAction="#renewBook" prefHeight="31.0" prefWidth="167.0" text="Renew">
            <font>
              <Font name="Segoe UI Semilight" size="15.0"/>
            </font>
          </Button>
        </HBox>
      </bottom>
    </BorderPane>
  </center>
</BorderPane>
