<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="org.group4.librarymanagercode.BorrowingBookController"
  prefHeight="500.0" prefWidth="700.0">

  <left>
    <VBox prefHeight="582.0" prefWidth="130.0" style="-fx-background-color: #2e069c;"
      BorderPane.alignment="CENTER">
      <children>
        <JFXButton fx:id="homeButton" alignment="TOP_LEFT" contentDisplay="TOP"
          onAction="#HomeAction" prefHeight="46.0" prefWidth="135.0" text="Home" textFill="WHITE">
          <font>
            <Font size="16.0"/>
          </font>
        </JFXButton>
        <JFXButton fx:id="MemberButton" alignment="TOP_LEFT"
          onAction="#MemberAction" prefHeight="46.0" prefWidth="133.0" text="Member"
          textFill="#fff8f8">
          <font>
            <Font size="16.0"/>
          </font>
        </JFXButton>
        <JFXButton fx:id="bookButton" alignment="TOP_LEFT"
          onAction="#BookAction" prefHeight="46.0" prefWidth="136.0" text="Book" textFill="#fff8f8">
          <font>
            <Font size="16.0"/>
          </font>
        </JFXButton>
        <JFXButton fx:id="returnBookButton" alignment="TOP_LEFT"
          onAction="#ReturnBookAction" prefHeight="46.0" prefWidth="137.0" text="Return Book"
          textFill="#fff8f8">
          <font>
            <Font size="16.0"/>
          </font>
        </JFXButton>
        <JFXButton fx:id="notificationButton" alignment="TOP_LEFT"
          onAction="#notificationAction" prefHeight="46.0" prefWidth="137.0" text="Notification"
          textFill="#fff8f8">
          <font>
            <Font size="16.0"/>
          </font>
        </JFXButton>
        <JFXButton fx:id="settingButton" alignment="TOP_LEFT"
          onAction="#SettingAction" prefHeight="46.0" prefWidth="137.0" text="Setting"
          textFill="#fff8f8">
          <font>
            <Font size="16.0"/>
          </font>
        </JFXButton>
        <JFXButton fx:id="closeButton" alignment="TOP_LEFT"
          onAction="#Close" prefHeight="46.0" prefWidth="137.0" text="Close"
          textFill="#fff8f8">
          <font>
            <Font size="16.0"/>
          </font>
        </JFXButton>
      </children>
    </VBox>
  </left>

  <top>
    <Pane prefHeight="130.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
      <children>
        <HBox alignment="CENTER" spacing="10"/>
        <Pane prefHeight="135.0" prefWidth="130.0" style="-fx-background-color: #2e069c;"/>
        <Label layoutX="130.0" layoutY="31.0" prefHeight="96.0" prefWidth="104.0" text="Book"
          textFill="#2e069c">
          <font>
            <Font name=".VnArial Bold" size="30.0"/>
          </font>
        </Label>
        <Label layoutX="379.0" layoutY="14.0" text="Library Management System" textFill="#a1a1a1">
          <font>
            <Font name="Segoe UI Semilight" size="23.0"/>
          </font>
          <BorderPane.margin>
            <Insets top="2.0"/>
          </BorderPane.margin>
        </Label>
      </children>
    </Pane>
  </top>

  <center>
    <!-- ScrollPane added here -->
    <ScrollPane fitToWidth="true" fitToHeight="true" prefHeight="400.0">
      <VBox>
        <TitledPane text="Book Item Information" collapsible="false">
          <GridPane hgap="10" vgap="10">
            <Label text="Barcode: " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="barcodeField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Place: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="placeField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

          </GridPane>
        </TitledPane>
        <TitledPane text="Book Information" collapsible="false">
          <GridPane hgap="10" vgap="10">
            <Label text="Book ISBN:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="isbnField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Book Title:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="titleField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Reference Only:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <CheckBox fx:id="referenceOnlyCheck" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Price:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="priceField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Format:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <ComboBox fx:id="formatComboBox" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Date of Purchase:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <DatePicker fx:id="purchaseDatePicker" GridPane.rowIndex="5"
              GridPane.columnIndex="1"/>

            <Label text="Publication Date:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <DatePicker fx:id="publicationDatePicker" GridPane.rowIndex="6"
              GridPane.columnIndex="1"/>
          </GridPane>
        </TitledPane>

        <TitledPane text="Student Information" collapsible="false">
          <GridPane hgap="10" vgap="10">
            <Label text="Student ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="studentIdField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Student Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="studentNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Date of Birth:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <DatePicker fx:id="dobDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="emailField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Phone Number:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="phoneField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
          </GridPane>
        </TitledPane>

        <TitledPane text="Loan Information" collapsible="false">
          <GridPane hgap="10" vgap="10">
            <Label text="Creation Date:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <DatePicker fx:id="creationDatePicker" GridPane.rowIndex="0"
              GridPane.columnIndex="1"/>

            <Label text="Due Date:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <DatePicker fx:id="dueDatePicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Return Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <DatePicker fx:id="returnDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
          </GridPane>
        </TitledPane>

        <!-- Submit Button -->
        <Button text="Submit" onAction="#handleSubmit" style="-fx-font-size: 15;"/>
      </VBox>
    </ScrollPane>
  </center>
</BorderPane>
