<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="org.group4.librarymanagercode.Admin.BookViewController"
  prefHeight="700.0" prefWidth="1000.0">
  <left>
    <VBox prefHeight="582.0" prefWidth="130.0" style="-fx-background-color: #2e069c;" BorderPane.alignment="CENTER">
      <children>
        <JFXButton fx:id="homeButton" alignment="TOP_LEFT" contentDisplay="TOP" prefHeight="46.0" prefWidth="135.0" text="Home" textFill="WHITE" textOverrun="CLIP">
          <font>
            <Font size="16.0" />
          </font>
        </JFXButton>
        <JFXButton fx:id="studentsButton" alignment="TOP_LEFT" centerShape="false" prefHeight="46.0" prefWidth="133.0" text="Students" textFill="#fff8f8" textOverrun="CLIP">
          <font>
            <Font size="16.0" />
          </font>
        </JFXButton>
        <JFXButton fx:id="bookButton" alignment="TOP_LEFT" prefHeight="46.0" prefWidth="136.0" text="Book" textFill="#fff8f8" textOverrun="CLIP">
          <font>
            <Font size="16.0" />
          </font>
        </JFXButton>
        <JFXButton fx:id="addBookButton" alignment="TOP_LEFT" prefHeight="46.0" prefWidth="135.0" text="Add Book" textFill="#fff8f8" textOverrun="CLIP">
          <font>
            <Font size="16.0" />
          </font>
        </JFXButton>
        <JFXButton fx:id="returnBookButton" alignment="TOP_LEFT" prefHeight="46.0" prefWidth="137.0" text="Return Book" textFill="#fff8f8" textOverrun="CLIP">
          <font>
            <Font size="16.0" />
          </font>
        </JFXButton>
        <JFXButton fx:id="settingButton" alignment="TOP_LEFT" prefHeight="46.0" prefWidth="137.0" text="Setting" textFill="#fff8f8" textOverrun="CLIP">
          <font>
            <Font size="16.0" />
          </font>
        </JFXButton>
        <JFXButton fx:id="closeButton" alignment="TOP_LEFT" prefHeight="46.0" prefWidth="137.0" text="Close" textFill="#fff8f8" textOverrun="CLIP">
          <font>
            <Font size="16.0" />
          </font>
        </JFXButton>
      </children>
    </VBox>
  </left>
  <top>
    <Pane prefHeight="100.0" prefWidth="800.0" BorderPane.alignment="CENTER">
      <children>
        <Pane prefHeight="112.0" prefWidth="130.0" style="-fx-background-color: #2e069c;" />
        <Label alignment="BOTTOM_CENTER" contentDisplay="RIGHT" layoutX="136.0" layoutY="8.0" prefHeight="96.0" prefWidth="172.0" text="Dashboard" textFill="#2e069c">
          <font>
            <Font name=".VnArial Bold" size="30.0" />
          </font>
        </Label>
        <Label text="Library Management System" textFill="#a1a1a1" BorderPane.alignment="CENTER">
          <font>
            <Font name="Segoe UI Semilight" size="23.0" />
          </font>
          <BorderPane.margin>
            <Insets top="2.0" />
          </BorderPane.margin>
        </Label>
      </children>
    </Pane>
  </top>
  <center>
    <TableView fx:id="tableView" prefHeight="523.0" prefWidth="990.0" tableMenuButtonVisible="true" BorderPane.alignment="CENTER">
      <columns>
        <TableColumn fx:id="Check" maxWidth="1500.0" minWidth="-1.0" prefWidth="33.0" />
        <TableColumn fx:id="ISBN" prefWidth="113.95263671875" text="Book ISBN" />
        <TableColumn fx:id="bookName" prefWidth="141.11334228515625" text="Book Title" />
        <TableColumn fx:id="bookAuthor" prefWidth="120.84616088867188" text="Book Author" />
        <TableColumn fx:id="bookPublisher" prefWidth="122.32125854492188" text="Book Publisher" />
        <TableColumn fx:id="edition" prefWidth="68.4598388671875" text="Edition" />
        <TableColumn fx:id="quantity" prefWidth="62.04144287109375" text="Quantity" />
        <TableColumn fx:id="remainingBooks" prefWidth="134.53460693359375" text="Remaining Books" />
        <TableColumn fx:id="sectionCol" prefWidth="79.5841064453125" text="Book Section" />
        <TableColumn fx:id="avilability" prefWidth="116.0" text="Availability" />
      </columns>
      <BorderPane.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </BorderPane.margin>
      <contextMenu>
        <ContextMenu>
          <items>
            <MenuItem mnemonicParsing="false" onAction="#loadUpdateBook" text="Update Book" />
            <MenuItem mnemonicParsing="false" onAction="#DeleteBook" text="Delete Book" />
          </items>
        </ContextMenu>
      </contextMenu>
      <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
    </TableView>
  </center>
</BorderPane>
