<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="org.group4.librarymanagercode.Admin.BookDetailController"
  prefHeight="700.0" prefWidth="1000.0">
  <center>
    <VBox spacing="10" alignment="CENTER">
      <!-- Thông tin sách -->
      <Label text="Book Details" style="-fx-font-size: 24px;" />

      <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="ISBN:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <Label fx:id="isbnLabel" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Title:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <Label fx:id="titleLabel" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Author:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <Label fx:id="authorLabel" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="Format:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <ComboBox fx:id="formatComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1" />

        <Label text="Status:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <ComboBox fx:id="statusComboBox" GridPane.rowIndex="4" GridPane.columnIndex="1" />
      </GridPane>

      <!-- Các nút chức năng -->
      <HBox alignment="CENTER" spacing="10">
        <Button text="Edit" onAction="#onEditBook" />
        <Button text="Remove" onAction="#onRemoveBook" />
      </HBox>
    </VBox>

  </center>
</BorderPane>
