<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.group4.librarymanagercode.EditBookController">
  <center>
    <VBox prefHeight="570.0" prefWidth="284.0" style="-fx-background-color: white;" BorderPane.alignment="CENTER">
      <Pane prefHeight="40.0" prefWidth="600.0">
        <Label layoutX="100.0" style="-fx-text-fill: #2b579a;" text="Book information">
          <font>
            <Font size="24.0" />
          </font>
          <padding>
            <Insets left="17.0" top="5.0" />
          </padding>
        </Label>
      </Pane>
      <TextField fx:id="bookISBN" layoutX="30.0" layoutY="250.0" prefHeight="26.0" prefWidth="260.0" promptText="ISBN" style="-fx-background-radius: 0;">
        <VBox.margin>
          <Insets left="20.0" right="20.0" top="15.0" />
        </VBox.margin>
      </TextField>
      <TextField fx:id="bookName" layoutX="30.0" layoutY="250.0" promptText="Member name" style="-fx-background-radius: 0;">
        <font>
          <Font name="Segoe UI Semilight" size="13.0" />
        </font>
        <VBox.margin>
          <Insets left="20.0" right="20.0" top="15.0" />
        </VBox.margin>
      </TextField>
      <TextField fx:id="bookSubject" layoutX="30.0" layoutY="250.0" prefHeight="26.0" prefWidth="260.0" promptText="Subject" style="-fx-background-radius: 0;">
        <VBox.margin>
          <Insets left="20.0" right="20.0" top="15.0" />
        </VBox.margin>
      </TextField>
      <TextField fx:id="bookPublisher" layoutX="30.0" layoutY="162.0" promptText="Publisher" style="-fx-background-radius: 0;">
        <font>
          <Font name="Segoe UI Semilight" size="13.0" />
        </font>
        <VBox.margin>
          <Insets left="20.0" right="20.0" top="15.0" />
        </VBox.margin>
      </TextField>
      <TextField fx:id="bookLanguage" promptText="Language" style="-fx-background-radius: 0;">
        <VBox.margin>
          <Insets left="20.0" right="20.0" top="15.0" />
        </VBox.margin>
        <font>
          <Font name="Segoe UI Semilight" size="13.0" />
        </font>
      </TextField>
      <TextField fx:id="numberOfPages" promptText="No Page" style="-fx-background-radius: 0;">
        <VBox.margin>
          <Insets left="20.0" right="20.0" top="15.0" />
        </VBox.margin>
        <font>
          <Font name="Segoe UI Semilight" size="13.0" />
        </font>
      </TextField>
      <TextField fx:id="bookAuthor" promptText="Author" style="-fx-background-radius: 0;">
        <VBox.margin>
          <Insets left="20.0" right="20.0" top="15.0" />
        </VBox.margin>
        <font>
          <Font name="Segoe UI Semilight" size="13.0" />
        </font>
      </TextField>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="352.0" spacing="8.0">
        <VBox.margin>
          <Insets top="10.0" />
        </VBox.margin>
        <JFXButton fx:id="cancel" layoutX="10.0" layoutY="10.0" onAction="#cancel" prefHeight="26.0" prefWidth="112.0" style="-fx-background-color: #2B579A;" text="Cancel" textFill="#fffefe">
          <HBox.margin>
            <Insets right="4.0" />
          </HBox.margin>
          <font>
            <Font name="Segoe UI Semilight" size="12.0" />
          </font>
        </JFXButton>
        <JFXButton fx:id="save" onAction="#saveBook" prefHeight="26.0" prefWidth="112.0" style="-fx-background-color: #2B579A;" text="Save" textFill="#fcfafa">
          <HBox.margin>
            <Insets left="3.0" />
          </HBox.margin>
          <font>
            <Font name="Segoe UI Semilight" size="12.0" />
          </font>
        </JFXButton>
      </HBox>
    </VBox>
  </center>
</BorderPane>
