<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.group4.controller.SettingController">
  <left>
    <VBox prefHeight="582.0" prefWidth="130.0" style="-fx-background-color: #2B579A;"
      BorderPane.alignment="CENTER">
      <JFXButton fx:id="homeButton" alignment="TOP_LEFT" contentDisplay="TOP" onAction="#HomeAction"
        prefHeight="46.0" prefWidth="135.0" text="Home" textFill="WHITE" textOverrun="CLIP">
        <font>
          <Font size="16.0"/>
        </font>
      </JFXButton>
      <JFXButton fx:id="MemberButton" alignment="TOP_LEFT" centerShape="false"
        onAction="#MemberAction" prefHeight="46.0" prefWidth="133.0" text="Member"
        textFill="#fff8f8" textOverrun="CLIP">
        <font>
          <Font size="16.0"/>
        </font>
      </JFXButton>
      <JFXButton fx:id="bookButton" alignment="TOP_LEFT" onAction="#BookAction" prefHeight="46.0"
        prefWidth="136.0" text="Book" textFill="#fff8f8" textOverrun="CLIP">
        <font>
          <Font size="16.0"/>
        </font>
      </JFXButton>
      <JFXButton fx:id="bookLendingButton" alignment="TOP_LEFT" onAction="#BookLendingAction"
        prefHeight="46.0"
        prefWidth="136.0" text="Book Lending" textFill="#fff8f8" textOverrun="CLIP">
        <font>
          <Font size="16.0"/>
        </font>
      </JFXButton>
      <JFXButton fx:id="notificationButton" alignment="TOP_LEFT" onAction="#notificationAction"
        prefHeight="46.0" prefWidth="137.0" text="Notification" textFill="#fff8f8"
        textOverrun="CLIP">
        <font>
          <Font size="16.0"/>
        </font>
      </JFXButton>
      <JFXButton fx:id="settingButton" alignment="TOP_LEFT" onAction="#SettingAction"
        prefHeight="46.0" prefWidth="137.0" text="Setting" textFill="#fff8f8" textOverrun="CLIP">
        <font>
          <Font size="16.0"/>
        </font>
      </JFXButton>
      <JFXButton fx:id="closeButton" alignment="TOP_LEFT" onAction="#Close" prefHeight="46.0"
        prefWidth="137.0" text="Close" textFill="#fff8f8" textOverrun="CLIP">
        <font>
          <Font size="16.0"/>
        </font>
      </JFXButton>
    </VBox>
  </left>
  <!-- Top Section -->
  <top>
    <Pane prefHeight="130.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
      <children>
        <Pane prefHeight="132.0" prefWidth="130.0" style="-fx-background-color: #2B579A;"/>
        <Label alignment="BOTTOM_CENTER" contentDisplay="RIGHT" layoutX="106.0" layoutY="31.0"
          prefHeight="96.0" prefWidth="172.0" text="Setting" textFill="#2b579a">
          <font>
            <Font name=".VnArial Bold" size="30.0"/>
          </font>
        </Label>
        <Label layoutX="379.0" layoutY="14.0" text="Library Management System" textFill="#2b579a"
          BorderPane.alignment="CENTER">
          <font>
            <Font name="Segoe UI Semilight" size="23.0"/>
          </font>
          <BorderPane.margin>
            <Insets top="2.0"/>
          </BorderPane.margin>
        </Label>
      </children>
    </Pane>
  </top>

  <!-- Center Section (Password Change Form) -->
  <center>
    <VBox alignment="TOP_CENTER" prefHeight="300.0" prefWidth="649.0" BorderPane.alignment="CENTER">
      <children>
        <!-- Change Password Label -->
        <Label text="Change Password" textFill="#2b579a">
          <font>
            <Font size="22.0"/>
          </font>
          <VBox.margin>
            <Insets top="10.0"/>
          </VBox.margin>
          <alignment>CENTER</alignment>
        </Label>

        <TextField fx:id="username" maxWidth="500.0" prefHeight="30.0" prefWidth="500.0"
          promptText="Username" style="-fx-background-radius: 0;">
          <VBox.margin>
            <Insets left="30.0" top="10.0"/>
          </VBox.margin>
          <font>
            <Font size="13.0"/>
          </font>
        </TextField>

        <!-- Current Password Field -->
        <PasswordField fx:id="currentPassword" maxWidth="500.0" prefHeight="30.0" prefWidth="500.0"
          promptText="Current Password" style="-fx-background-radius: 0;">
          <VBox.margin>
            <Insets left="30.0" top="10.0"/>
          </VBox.margin>
          <font>
            <Font size="13.0"/>
          </font>
        </PasswordField>

        <!-- New Password Field -->
        <PasswordField fx:id="newPassword" maxWidth="500.0" prefHeight="30.0" prefWidth="500.0"
          promptText="New Password" style="-fx-background-radius: 0;">
          <VBox.margin>
            <Insets left="30.0" top="10.0"/>
          </VBox.margin>
          <font>
            <Font size="13.0"/>
          </font>
        </PasswordField>

        <!-- Re-enter New Password Field -->
        <PasswordField fx:id="newPassword2" maxWidth="500.0" prefHeight="30.0" prefWidth="500.0"
          promptText="Re-enter New Password" style="-fx-background-radius: 0;">
          <VBox.margin>
            <Insets left="30.0" top="10.0"/>
          </VBox.margin>
          <font>
            <Font size="13.0"/>
          </font>
        </PasswordField>

        <!-- Action Buttons -->
        <HBox alignment="CENTER" prefHeight="49.0" prefWidth="649.0" spacing="18.0">
          <children>
            <JFXButton fx:id="cancel" onAction="#cancel" prefHeight="25.0" prefWidth="240.0"
              text="Cancel"/>
            <JFXButton fx:id="save" onAction="#changePassword" prefHeight="25.0" prefWidth="240.0"
              text="Save"/>
          </children>
          <VBox.margin>
            <Insets top="10.0"/>
          </VBox.margin>
        </HBox>
      </children>
    </VBox>
  </center>
</BorderPane>
