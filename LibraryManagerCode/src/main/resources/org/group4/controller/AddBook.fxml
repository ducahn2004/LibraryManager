<?xml version="1.0" encoding="UTF-8"?>

<!-- Import necessary libraries -->
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane
  maxHeight="-Infinity"
  maxWidth="-Infinity"
  minHeight="-Infinity"
  minWidth="-Infinity"
  prefHeight="700.0"
  prefWidth="1000.0"
  xmlns="http://javafx.com/javafx/23.0.1"
  xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="org.group4.controller.AddBookController">

  <!-- Left navigation menu with sidebar buttons -->
  <left>
    <VBox
      prefHeight="582.0"
      prefWidth="130.0"
      style="-fx-background-color: #2B579A;"
      BorderPane.alignment="CENTER">
      <!-- Button: Navigate to Home -->
      <JFXButton
        fx:id="homeButton"
        alignment="TOP_LEFT"
        contentDisplay="TOP"
        onAction="#homeAction"
        prefHeight="46.0"
        prefWidth="135.0"
        text="Home"
        textFill="WHITE">
        <font>
          <Font size="16.0"/>
        </font>
      </JFXButton>

      <!-- Button: Navigate to Member section -->
      <JFXButton
        fx:id="MemberButton"
        alignment="TOP_LEFT"
        onAction="#memberAction"
        prefHeight="46.0"
        prefWidth="133.0"
        text="Member"
        textFill="#fff8f8">
        <font>
          <Font size="16.0"/>
        </font>
      </JFXButton>

      <!-- Button: Navigate to Book section -->
      <JFXButton
        fx:id="bookButton"
        alignment="TOP_LEFT"
        onAction="#bookAction"
        prefHeight="46.0"
        prefWidth="136.0"
        text="Book"
        textFill="#fff8f8">
        <font>
          <Font size="16.0"/>
        </font>
      </JFXButton>

      <!-- Button: Navigate to Notifications -->
      <JFXButton
        fx:id="notificationButton"
        alignment="TOP_LEFT"
        onAction="#notificationAction"
        prefHeight="46.0"
        prefWidth="137.0"
        text="Notification"
        textFill="#fff8f8">
        <font>
          <Font size="16.0"/>
        </font>
      </JFXButton>

      <!-- Button: Open Settings -->
      <JFXButton
        fx:id="settingButton"
        alignment="TOP_LEFT"
        onAction="#settingAction"
        prefHeight="46.0"
        prefWidth="137.0"
        text="Setting"
        textFill="#fff8f8">
        <font>
          <Font size="16.0"/>
        </font>
      </JFXButton>

      <!-- Button: Close the application -->
      <JFXButton
        fx:id="closeButton"
        alignment="TOP_LEFT"
        onAction="#close"
        prefHeight="46.0"
        prefWidth="137.0"
        text="Close"
        textFill="#fff8f8">
        <font>
          <Font size="16.0"/>
        </font>
      </JFXButton>
    </VBox>
  </left>

  <!-- Top header section -->
  <top>
    <Pane prefHeight="130.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
      <!-- Label: Title of the current section -->
      <Label
        layoutX="434.0"
        layoutY="31.0"
        prefHeight="96.0"
        prefWidth="172.0"
        text="Add Book"
        textFill="#2b579a">
        <font>
          <Font name=".VnArial Bold" size="30.0"/>
        </font>
      </Label>
      <!-- Label: Application name -->
      <Label
        layoutX="379.0"
        layoutY="14.0"
        text="Library Management System"
        textFill="#2b579a">
        <font>
          <Font name="Segoe UI Semilight" size="23.0"/>
        </font>
      </Label>
    </Pane>
  </top>

  <!-- Center form for adding a book -->
  <center>
    <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
      <VBox layoutX="138.0" layoutY="22.0" prefHeight="526.0" prefWidth="619.0">

        <!-- Input field: ISBN -->
        <HBox prefHeight="60.0" prefWidth="619.0">
          <TextField
            fx:id="isbnField"
            prefHeight="26.0"
            prefWidth="450.0"
            promptText="ISBN"/>
          <!-- Button: Search by ISBN -->
          <Button
            onAction="#searchByISBN"
            text="Search"/>
        </HBox>

        <!-- Input field: Title -->
        <HBox prefHeight="60.0" prefWidth="619.0">
          <TextField
            fx:id="titleField"
            prefHeight="26.0"
            prefWidth="450.0"
            promptText="Title"/>
        </HBox>

        <!-- Input field: Subject -->
        <HBox prefHeight="60.0" prefWidth="619.0">
          <TextField
            fx:id="subjectField"
            prefHeight="26.0"
            prefWidth="450.0"
            promptText="Subject"/>
        </HBox>

        <!-- Input field: Publisher -->
        <HBox prefHeight="60.0" prefWidth="619.0">
          <TextField
            fx:id="publisherField"
            prefHeight="26.0"
            prefWidth="450.0"
            promptText="Publisher"/>
        </HBox>

        <!-- Input field: Language -->
        <HBox prefHeight="60.0" prefWidth="619.0">
          <TextField
            fx:id="languageField"
            prefHeight="26.0"
            prefWidth="450.0"
            promptText="Language"/>
        </HBox>

        <!-- Input field: Number of Pages -->
        <HBox prefHeight="60.0" prefWidth="619.0">
          <TextField
            fx:id="numberOfPagesField"
            prefHeight="26.0"
            prefWidth="450.0"
            promptText="Number of Pages"/>
        </HBox>

        <!-- Input field: Authors (comma-separated) -->
        <HBox prefHeight="100.0" prefWidth="619.0">
          <TextArea
            fx:id="authorsField"
            prefHeight="96.0"
            prefWidth="450.0"
            promptText="Authors (comma separated)"/>
        </HBox>

        <!-- Button: Submit to add book -->
        <HBox prefHeight="100.0" prefWidth="200.0">
          <Button
            onAction="#addBookAction"
            text="Add Book"/>
        </HBox>
      </VBox>
    </Pane>
  </center>

</BorderPane>
